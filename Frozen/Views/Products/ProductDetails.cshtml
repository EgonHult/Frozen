<div class="row mt-4 simple-linear cart-padding">

    <div class="col-md-12 col-lg-6 mt-3">

    @if (Model != null)
    {
        <h3>@Model.Name</h3>
        <p class="lead">Vikt: @Model.WeightInGrams gram</p>
        <p class="lead">Antal i lager: @Model.Quantity</p>

        <div class="d-flex justify-content-between">
            <div class="form-inline">
                <h3 class="p-0 m-0 mr-3 ">@Model.Price kr</h3>

            </div>
            <input type="button" value="Lägg i varukorg" onclick="AddToCart('@Model.Id')" class="button button1" />
        </div>

        <hr />

        <p>@Model.Details</p>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Produkten finns ej</h4>
            <p>Produkten du söker finns inte eller har utgått från vårt sortiment.</p>
            <hr>
            <p class="mb-0"><a asp-controller="Products" asp-action="ProductsPage">Klicka här för att se alla våra erbjudanden</a></p>
        </div>
    }
    </div>

    @if (Model != null)
    {
        <div class="col-md-12 col-lg-6 text-center">
            @if (@Model.Image != null)
            {
                <img src="@Model.Image" alt="Bild på produkten" class="img-fluid rounded-lg" width="350" height="250" />
            }
        </div>
    }
</div>