@model List<Order>
@{
}

<h3>Orders</h3>

<div class="card mb-3 simple-linear shadow-lg cart-padding">
    <table class="table table-striped">
        <tr>
            <td>Datum</td>
            <td>Status</td>
            <td></td>
        </tr>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Date</td>
                <td>@order.Status.Name</td>
                <td><a asp-action="OrderUpdate" asp-route-id="@order.Id">Uppdatera</a></td>
            </tr>
        }
    </table>
</div>