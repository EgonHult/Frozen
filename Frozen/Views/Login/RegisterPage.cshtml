@model Frozen.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "RegisterPage";
}

@if (ViewBag.Exists != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Exists!
    </div>
}

<div class="card  mb-3 simple-linear shadow-lg cart-padding">
    <form method="post" asp-action="RegisterPage">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">Mailadress <label class="text-danger">*</label></label>
                <input asp-for="Email" type="email" placeholder="namn@exempel.se" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Password">Lösenord <label class="text-danger">*</label></label>
                <input type="password" asp-for="Password" placeholder="Ditt lösenord" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RePassword">Lösenord igen <label class="text-danger">*</label></label>
                <input type="password" asp-for="RePassword" placeholder="Bekräfta lösenord" class="form-control">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName">Förnamn <label class="text-danger">*</label></label>
                <input type="text" asp-for="FirstName" placeholder="Ditt förnamn" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">Efternamn <label class="text-danger">*</label></label>
                <input type="text" asp-for="LastName" placeholder="Ditt efternamn" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Address">Adress <label class="text-danger">*</label></label>
                <input type="text" asp-for="Address" placeholder="Din gatuadress" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="City">Stad <label class="text-danger">*</label></label>
                <input type="text" asp-for="City" placeholder="Din stad" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Zip">Postnummer <label class="text-danger">*</label></label>
                <input type="text" asp-for="Zip" placeholder="Ditt postnummer" class="form-control">
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PhoneNumber">Telefonnummer <label class="text-danger">*</label></label>
                <input type="text" asp-for="PhoneNumber" placeholder="Ditt telefonnummer" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Registrera</button>
    </form>
</div>
