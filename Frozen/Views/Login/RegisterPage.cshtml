@model Frozen.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "RegisterPage";
}

@if (ViewBag.Exists != null)
{
    <label>@ViewBag.Exists</label> 
}
<form method="post" asp-action="RegisterPage">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Email">Mailadress <label class="text-danger">*</label></label>
            <input asp-for="Email" type="email" placeholder="namn@exempel.se" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Password">Lösenord <label class="text-danger">*</label></label>
            <input type="password" asp-for="Password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="RePassword">Lösenord igen <label class="text-danger">*</label></label>
            <input type="password" asp-for="RePassword" class="form-control">
            <span asp-validation-for="RePassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="FirstName">Förnamn <label class="text-danger">*</label></label>
            <input type="text" asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="LastName">Efternamn <label class="text-danger">*</label></label>
            <input type="text" asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Address">Adress</label>
            <input type="text" asp-for="Address" class="form-control">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="City">Stad</label>
            <input type="text" asp-for="City" class="form-control">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Zip">Postnummer</label>
            <input type="text" asp-for="Zip" class="form-control">
            <span asp-validation-for="Zip" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Phone">Telefonnummer</label>
            <input type="text" asp-for="Phone" class="form-control">
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Registrera</button>
</form>
